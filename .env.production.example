# HOA Accounting System - Production Environment Configuration
# Copy this file to .env.production and fill in your values

# ============================================================================
# Django Configuration
# ============================================================================
DJANGO_SECRET_KEY=your-super-secret-key-here-change-this-in-production-minimum-50-chars
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,api.yourdomain.com
DJANGO_SETTINGS_MODULE=hoaaccounting.settings

# ============================================================================
# Database Configuration (PostgreSQL)
# ============================================================================
POSTGRES_DB=hoaaccounting
POSTGRES_USER=hoaadmin
POSTGRES_PASSWORD=your-strong-password-here-minimum-16-chars
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://hoaadmin:your-password@postgres:5432/hoaaccounting

# ============================================================================
# CORS Configuration
# ============================================================================
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOW_CREDENTIALS=True

# ============================================================================
# Email Configuration (for notifications)
# ============================================================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.your-provider.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@domain.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# ============================================================================
# Redis Configuration (caching & sessions)
# ============================================================================
REDIS_URL=redis://redis:6379/0
CACHE_TTL=300

# ============================================================================
# Security Settings
# ============================================================================
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# ============================================================================
# File Storage (if using AWS S3 or similar)
# ============================================================================
# AWS_ACCESS_KEY_ID=your-aws-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1
# USE_S3=True

# ============================================================================
# Monitoring & Logging
# ============================================================================
SENTRY_DSN=your-sentry-dsn-here  # Optional: for error tracking
LOG_LEVEL=INFO

# ============================================================================
# Application Settings
# ============================================================================
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
PAGINATION_PAGE_SIZE=100
